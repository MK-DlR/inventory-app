<!-- views/create-medicinal.ejs -->

<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <div class="create-medicinal content">
            <h1><%= title %></h1>
            
            <div class="form-container-wrapper">
                <form action="/medicinal/new" method="POST" class="form-container">
                    <div class="form-row">
                        <div class="form-col">
                            <label for="use_name">Medicinal Use</label>
                            <input 
                                type="text" 
                                name="use_name" 
                                id="use_name" 
                                placeholder="e.g., Pain Relief, Digestive Aid"
                                value="<%= locals.formData?.use_name || '' %>"
                                required>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-col">
                            <label for="description">Description</label>
                            <input 
                                type="text" 
                                name="description" 
                                id="description" 
                                placeholder="Describe the medicinal properties and benefits"
                                value="<%= locals.formData?.description || '' %>"
                                required>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-col">
                            <button type="submit" class="button submit">Submit Medicinal Use</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>