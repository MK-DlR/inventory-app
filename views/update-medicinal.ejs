<!-- views/update-medicinal.ejs -->

<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <div class="create-medicinal content">
            <h1><%= title %></h1>

            <ul>
                <form action="/medicinal/<%= medicinalUse.id %>/update" method="POST">
                    <label for="use_name"><strong>Medicinal Use:</strong> </label>
                    <input 
                        type="text" 
                        name="use_name" 
                        id="use_name" 
                        value="<%= locals.formData?.use_name || medicinalUse.use_name %>"
                        required>
                    <br>
                    
                    <label for="description"><strong>Description:</strong> </label>
                    <input 
                        type="text" 
                        name="description" 
                        id="description" 
                        value="<%= locals.formData?.description || medicinalUse.description %>"
                        required>
                    <br>
                    
                    <button type="submit" class="submit button">Submit</button>
                </form>
            </ul>
            <br>
            
        </div>
    </body>
</html>