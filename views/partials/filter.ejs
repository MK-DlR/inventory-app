<!-- views/filter.ejs -->

<!-- https://www.geeksforgeeks.org/html/html-dropdown/ -->

<div class="filter">
    <div class="medicinal-select dropdown">
        <form action="/filter" method="GET">
            <button class="dropbtn">Medicinal Use(s)</button>
            <div class="dropdown-content">
                <!-- loop through existing medicinalUses -->
                <% if (medicinalUses.length === 0) { %>
                    <p>No medicinal uses found.</p>
                    <% } else { %>
                        <% medicinalUses.forEach(medicinalUse => { %>
                            <input type="checkbox" id="medicinal_use_<%= medicinalUse.id %>" name="medicinal_uses[]" value="<%= medicinalUse.id %>">
                            <label for="medicinal_use_<%= medicinalUse.id %>"> <%= medicinalUse.use_name %></label><br>
                        <% }) %>
                    <% } %>
            </div>
        </div>

        <div class="stock-status dropdown">
            <button class="dropbtn">Stock Status</button>
            <div class="dropdown-content">
                <input type="checkbox" id="item1"
                    value="in_stock"><label for="item1">In Stock</label><br>
                <input type="checkbox" id="item2"
                    value="out_of_stock"><label for="item2">Out of Stock</label><br>
            </div>
        </div>

        <div class="quantity-status dropdown">
            <button class="dropbtn">Quantity</button>
            <div class="dropdown-content">
                <input type="checkbox" id="item1"
                    value="high"><label for="item1">High</label><br>
                <input type="checkbox" id="item2"
                    value="medium"><label for="item2">Medium</label><br>
                <input type="checkbox" id="item3"
                    value="low"><label for="item3">Low</label><br>
            </div>
        </div>

        <div class="order-status dropdown">
            <button class="dropbtn">Order Status</button>
            <div class="dropdown-content">
                <input type="checkbox" id="item1"
                    value="needs_ordering"><label for="item1">Needs Ordering</label><br>
                <input type="checkbox" id="item2"
                    value="on_order"><label for="item2">On Order</label><br>
                <input type="checkbox" id="item3"
                    value="null"><label for="item3">N/A</label><br>
            </div>
        </div>

        <button type="submit" class="submit button">Submit</button>
    </form>
</div>